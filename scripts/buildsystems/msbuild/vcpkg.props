<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <VcpkgEnabled Condition="'$(VcpkgEnabled)' == ''">true</VcpkgEnabled>
    <VcpkgAutoLink Condition="'$(VcpkgAutoLink)' == ''">true</VcpkgAutoLink>
    <VcpkgUseStatic Condition="'$(VcpkgUseStatic)' == ''">false</VcpkgUseStatic>
  </PropertyGroup>

  <PropertyGroup Condition="'$(VcpkgUseStatic)' == 'true'">
    <VcpkgTripletSufix>$(VcpkgTripletSufix)-static</VcpkgTripletSufix>
  </PropertyGroup>

  <PropertyGroup>
    <VcpkgTripletPrefix Condition="'$(VcpkgTripletPrefix)' == ''">$(PlatformTarget)</VcpkgTripletPrefix>
  </PropertyGroup> 

  <PropertyGroup Condition="'$(ApplicationType)|$(ApplicationTypeRevision)' == 'Windows Store|10.0'">
    <VcpkgTriplet Condition="'$(VcpkgTriplet)' == ''">$(VcpkgTripletPrefix)-uwp$(VcpkgTripletSufix)</VcpkgTriplet>
  </PropertyGroup>

  <PropertyGroup Condition="'$(ApplicationType)|$(ApplicationTypeRevision)' != 'Windows Store|10.0'">
    <VcpkgTriplet Condition="'$(VcpkgTriplet)' == ''">$(VcpkgTripletPrefix)-windows$(VcpkgTripletSufix)</VcpkgTriplet>
  </PropertyGroup>

  <PropertyGroup>
    <VcpkgBasePath Condition="'$(VcpkgBasePath)' == ''">$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), .vcpkg-root))</VcpkgBasePath>
    <VcpkgRoot Condition="'$(VcpkgRoot)' == ''">$(VcpkgBasePath)\installed\$(VcpkgTriplet)\</VcpkgRoot>
    <VcpkgPageSchema>$(VcpkgBasePath)\scripts\buildsystems\msbuild\vcpkg-general.xml</VcpkgPageSchema>
    <VcpkgConfiguration Condition="'$(VcpkgConfiguration)' == ''">$(Configuration)</VcpkgConfiguration>
  </PropertyGroup>

</Project>