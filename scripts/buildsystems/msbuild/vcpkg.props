<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<VcpkgEnabled Condition="'$(VcpkgEnabled)' == ''">true</VcpkgEnabled>
		<VcpkgAutoLink Condition="'$(VcpkgAutoLink)' == ''">true</VcpkgAutoLink>
		<VcpkgUseStatic Condition="'$(VcpkgUseStatic)' == ''">false</VcpkgUseStatic>
	</PropertyGroup>
	
	<PropertyGroup Condition="'$(VcpkgUseStatic)' == 'true'">
		<VcpkgPlatformSufix Condition="'$(VcpkgPlatformSufix)' == ''">-static</VcpkgPlatformSufix>
	</PropertyGroup>
	  	
	<PropertyGroup Condition="'$(Platform)' == 'Win32'">
		<VcpkgPlatformPrefix Condition="'$(VcpkgPlatformPrefix)' == ''">x86</VcpkgPlatformPrefix>
	</PropertyGroup>
	
	<PropertyGroup>
		<VcpkgPlatformPrefix Condition="'$(VcpkgPlatformPrefix)' == ''">$(Platform)</VcpkgPlatformPrefix>
	</PropertyGroup> 
	
	<PropertyGroup Condition="'$(Platform)|$(ApplicationType)|$(ApplicationTypeRevision)' == '|Windows Store|10.0'">
		<VcpkgTriplet Condition="'$(VcpkgTriplet)' == ''">$(VcpkgPlatformPrefix)-uwp$(VcpkgPlatformSufix)</VcpkgTriplet>
	</PropertyGroup>
	
	<PropertyGroup>
		<VcpkgTriplet Condition="'$(VcpkgTriplet)' == ''">$(VcpkgPlatformPrefix)-windows$(VcpkgPlatformSufix)</VcpkgTriplet>
		<VcpkgBasePath Condition="'$(VcpkgBasePath)' == ''">$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), .vcpkg-root))</VcpkgBasePath>
		<VcpkgRoot Condition="'$(VcpkgRoot)' == ''">$(VcpkgBasePath)\installed\$(VcpkgTriplet)\</VcpkgRoot>
		<VcpkgPageSchema>$(VcpkgBasePath)\scripts\buildsystems\msbuild\vcpkg-general.xml</VcpkgPageSchema>
		<VcpkgConfiguration Condition="'$(VcpkgConfiguration)' == ''">$(Configuration)</VcpkgConfiguration>
	</PropertyGroup>
	  
</Project>